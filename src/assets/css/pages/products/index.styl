            font-weight 700
    & .pageProductItem
        margin-bottom 99px
        position relative
        &:hover
            &:before
                content ''
                width 100%
                height 100%
                position absolute
                top 0
                left 0
                background-color rgba(0,0,0,0.25)
                z-index 7
            & .btn
                display flex
    & .product-media
        margin-bottom 25px
        & img
