.page-product
    & .banner-bottom
        margin-top 0
    & > footer
        border-top 1px solid #333

.page-product-list
    margin-top 54px
    & .btn
        // Style for "ver detalh"
        // Style for "RetÃ¢ngulo"
        width 146px
        height 50px
        background-color #fafafa
        padding 0
