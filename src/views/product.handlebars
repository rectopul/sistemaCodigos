{{>header}}

<!-- Content // -->
<div class="container productResume mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-1 order-md-2">
            <div class="row">
                <div class="col-12 productImage text-center">
                    <img src="{{imageDef.url}}" alt="">
                </div>
            </div>

            <div class="row productThumbnails mt-3">
                {{#each product.image}}
                <div class="col-6 col-md-4">
                    <img src="{{url}}" alt="">
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-md-5 order-md-1">
            <h1 class="productTitle mt-5 mt-md-0">{{product.name}}</h1>
            <div class="row">
                <div class="col-12 productContent mt-md-5">
                    {{{product.description}}}
                </div>
            </div>

            <div class="row mt-md-5">
                <div class="col-12 mb-3">
                    <a class="btn btn-gold" href="#">Ver bula</a>
                </div>
                <div class="col-12">
                    <a class="btn btn-dark" href="/distributors">Onde comprar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1>Outros produtos</h1>
        </div>
    </div>
</div>

{{>productList}}
<!-- Content // -->
{{>footer}}